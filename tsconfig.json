{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react-jsx",
    "module": "commonjs",
    "baseUrl": "./src/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@styles/*": ["./styles/*"],
      "@pages/*": ["./pages/*"]
    }
  },
  "exclude": ["node_modules"]
}
